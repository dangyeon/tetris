<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.text.*?>
<?import tetris.ui.*?>


<StackPane fx:id="window" prefHeight="600" prefWidth="800"
    xmlns:fx="http://javafx.com/fxml" 
    fx:controller="tetris.core.UIController"
    stylesheets="/css/stylesheet.css">
    <BorderPane fx:id="root">
        <top>
            <ToolBar fx:id="toolbar" prefHeight="60">
                <AltButton       text="New Game"    onAction="#newGame" />
                <AltToggleButton text="Pause"      onAction="#toggleGame" fx:id="toggleButton" disable="true"/>
                <AltButton       text="Restart"     onAction="#restartGame" fx:id="restartButton"  disable="true"/>
                <AltToggleButton text="help"   fx:id="helpButton" />
                <HSpacer/>
                <StackPane prefWidth="100" prefHeight="50" fx:id="previewBox"></StackPane>
            </ToolBar>
        </top>
        <center>
            <fx:define>
                <TilePane fx:id="gameOverPage">
                    <Label text="Game Over"/>
                </TilePane>

                <VBox fx:id="optionPage">
                    <alignment><Pos fx:constant="CENTER"/></alignment>
                    <GridPane hgap="10" vgap="50" style="-fx-padding: 20 20 20 20" >
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30"/>
                            <ColumnConstraints>
                                <hgrow><Priority fx:constant="ALWAYS"/></hgrow>
                            </ColumnConstraints>
                            <ColumnConstraints percentWidth="10" />
                        </columnConstraints>
                        <LargeLabel  row="0" column="0" text="frame rate" />
                        <CustomizedSlider  row="0" column="1" fx:id="frameRateSlider" min="50" max="80" value="60"/>
                        <LargeLabel  row="0" column="2" fx:id="frameRateLabel"/>

                        <LargeLabel row="1" column="0" text="column number"/>
                        <CustomizedSlider row="1" column="1" fx:id="columnNumberSlider"  min="10" max="50" value="10"/>
                        <LargeLabel row="1" column="2" fx:id="columnNumberLabel"  />

                        <LargeLabel row="2" column="0" text="row number" />
                        <CustomizedSlider row="2" column="1" fx:id="rowNumberSlider" min="10" max="50" value="20" />
                        <LargeLabel row="2" column="2" fx:id="rowNumberLabel" />

                        <Button text="Start" onAction="#startNewGame">
                            <GridPane.rowIndex>3</GridPane.rowIndex>
                            <GridPane.columnIndex>1</GridPane.columnIndex>
                            <GridPane.halignment><HPos fx:constant="RIGHT"/></GridPane.halignment>
                        </Button>
                    </GridPane>
                </VBox>

            </fx:define>

            <HBox fx:id="center">
            </HBox>
        </center>
    </BorderPane>
    <HBox fx:id="helpContainer" prefWidth="500" prefHeight="500" opacity="0.60">
        <WebView fx:id="helpPage">
            <focusTraversable>false</focusTraversable>
        </WebView>
        <visible>false</visible>
    </HBox>
</StackPane>
